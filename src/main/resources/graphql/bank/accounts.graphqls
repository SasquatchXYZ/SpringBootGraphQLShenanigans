type Query {
    accounts: [BankAccountType]
    accountById (accountId : ID): BankAccountType
}

type BankAccountType {
    id: ID
    client: ClientType
    currency: Currency
    balance: Float
    status: String
}

input BankAccountInput {
    id: ID
    clientId: Int
    currency: Currency
    balance: Float
    status: String
}

type ClientType {
    id: ID
    firstName: String
    middleName: String
    lastName: String
}

# Supported currencies
enum Currency {
    EUR, CAD, USD
}